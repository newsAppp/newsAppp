{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/app.js", // or your entry file
        "outFiles": ["${workspaceFolder}/dist/**/*.js"], // For TypeScript projects
        "runtimeArgs": ["--nolazy"],
        "env": {
          "NODE_ENV": "development"
        }
      }
    ]
  }
  